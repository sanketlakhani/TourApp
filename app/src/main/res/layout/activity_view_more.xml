<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#718C9A"
    android:orientation="vertical"
    tools:context=".ActivityViewMore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--
                <ImageView
                    android:id="@+id/imgBackk"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:src="@drawable/img_back"
                    app:tint="@color/black" />

                <TextView
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_40sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Detail Page"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />-->

    </LinearLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">

        <ImageView

            android:id="@+id/imgPlace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="centerCrop"
             />

        <TextView

            android:id="@+id/txtGetPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/gummy_bears"
            android:text="Mumbai"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgBackk"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/img_back"
            app:tint="@color/white" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_420sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:elevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#273238"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/gummy_bears"
                        android:text="Price"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />

                    <TextView

                        android:id="@+id/txtGetPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/font1"
                        android:text="price"
                        android:textColor="#7CC27F"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/gummy_bears"
                        android:text="Total Days"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />

                    <TextView

                        android:id="@+id/txtGetDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/font1"
                        android:text="Description"
                        android:textColor="#7CC27F"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/gummy_bears"
                    android:text="Description :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/txtGetDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/font1"
                            android:text="Description"
                            android:textColor="#7CC27F"
                            android:textSize="@dimen/_15ssp" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/gummy_bears"
                    android:text="Current Location :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/font1"
                    android:text="Surat,gujarat"
                    android:textColor="#7CC27F"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/gummy_bears"
                    android:text="Destination :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

                <TextView

                    android:id="@+id/txtDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/font1"
                    android:text="Surat,gujarat"
                    android:textColor="#7CC27F"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>


            <androidx.cardview.widget.CardView

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="#CF0B1C"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout

                    android:id="@+id/mapLinear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See on map"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                    <ImageView

                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location"
                        android:tint="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/btnBook"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/button_5"
                android:text="Book"
                android:textAllCaps="false"
                android:textColor="#30643A"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>